<%- include('./partials/header') %>
<%- include('./partials/left-panel') %>

<div class="column is-8-desktop">
    <p class=" blog-post-body text-justify">
        <% if (postRes!='') { %>

    <div class="block p-2">
        <h2 class="subtitle is-size-4"> <%= postRes.title %> </h2>
        <p><%= postRes.content %> </p>
        <div class="mt-3">
            <!-- <form action="" method="GET"> -->
            <a class="button is-primary " href="<%=postRes.url+'/update'%>"
                style="color:white; text-decoration:inherit">Update</a>
            <a class="button is-danger " href="<%=postRes.url+'/delete'%>"
                style="color:white; text-decoration:inherit">Delete</a>
            <!-- </form> -->
        </div>
        <% }else{%>
        Post Not found
        <%}%>
        </div>

        <div class="box">
            <div class="is-flex is-align-items-center ">
                <figure class="image is-64x64">
                    <img src="https://bulma.io/images/placeholders/64x64.png" alt="Placeholder image">
                </figure>

                <div class="is-flex is-flex-direction-column pl-2">
                    <p class="is-size-5"><%= postRes.author.fullname%> </p>
                    <p class="is-size-6"><%= postRes.author.country%> </p>
                </div>
            </div>
        </div>
</p>
</div>
<%- include('./partials/footer') %>